import Layout from "../layouts/Layout.astro"
import { getCollection } from "astro:content"
import { Image } from "astro:assets"

// Fetch all collections
const entities = await getCollection("entity")
const controversies = await getCollection("controversy")
const categories = await getCollection("category")

// Helper function to determine if an image is remote
function isRemoteImage(image: any): boolean {
  if (!image) return false
  if (typeof image === 'string') return image.startsWith('http')
  return image.src?.startsWith('http') || false
}

// Helper function to get image dimensions
function getImageDimensions(image: any) {
  if (!image) return null
  if (typeof image === 'object' && image.width && image.height) {
    return { width: image.width, height: image.height }
  }
  return null
}

// Enhanced image statistics
const imageStats = {
  total: entities.filter(e => e.data.image).length,
  remote: entities.filter(e => isRemoteImage(e.data.image)).length,
  local: entities.filter(e => e.data.image && !isRemoteImage(e.data.image)).length,
}
console.log(entities.map(e => e.data.image))
// Enhanced image validation
const imageValidation = {
  total: entities.filter(e => e.data.image).length,
  remote: entities.filter(e => isRemoteImage(e.data.image)).length,
  local: entities.filter(e => e.data.image && !isRemoteImage(e.data.image)).length,
  notSquare: entities.filter(e => {
    const dimensions = getImageDimensions(e.data.image)
    return dimensions && Math.abs(dimensions.width - dimensions.height) > 10
  }).length,
}

// Calculate statistics
const stats = {
  entities: {
    total: entities.length,
    withImage: imageStats.total,
    withDescription: entities.filter(e => e.data.description).length,
    remoteImages: imageStats.remote,
    localImages: imageStats.local,
  },
  controversies: {
    total: controversies.length,
    byStatus: {
      ALLEGED: controversies.filter(c => c.data.status === "ALLEGED").length,
      CONFIRMED: controversies.filter(c => c.data.status === "CONFIRMED").length,
      DISPROVEN: controversies.filter(c => c.data.status === "DISPROVEN").length,
    },
    withSources: controversies.filter(c => c.data.sources.length > 0).length,
  },
  categories: {
    total: categories.length,
    withDescription: categories.filter(c => c.data.description).length,
  }
}

// Find entities without images
const entitiesWithoutImages = entities
  .filter(e => !e.data.image)
  .sort((a, b) => {
    const aCount = controversies.filter(c => c.data.entities.some(ref => ref.id === a.id)).length
    const bCount = controversies.filter(c => c.data.entities.some(ref => ref.id === b.id)).length
    return bCount - aCount
  })
  .slice(0, 5)

// Find entities with remote images
const entitiesWithRemoteImages = entities
  .filter(e => isRemoteImage(e.data.image))
  .sort((a, b) => {
    const aCount = controversies.filter(c => c.data.entities.some(ref => ref.id === a.id)).length
    const bCount = controversies.filter(c => c.data.entities.some(ref => ref.id === b.id)).length
    return bCount - aCount
  })
  .slice(0, 5)

// Find controversies without sources
const controversiesWithoutSources = controversies
  .filter(c => c.data.sources.length === 0)
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 5)

// Find entities with non-square images
const entitiesWithBadImages = entities
  .filter(e => {
    const dimensions = getImageDimensions(e.data.image)
    return dimensions && Math.abs(dimensions.width - dimensions.height) > 10
  })
  .sort((a, b) => {
    const aCount = controversies.filter(c => c.data.entities.some(ref => ref.id === a.id)).length
    const bCount = controversies.filter(c => c.data.entities.some(ref => ref.id === b.id)).length
    return bCount - aCount
  })
  .slice(0, 5)
