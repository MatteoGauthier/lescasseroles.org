---
import "../styles/globals.css";
interface Props {
  title?: string
  description?: string
}

const { 
  title = "Namecheck - Controverses et Polémiques",
  description = "Une base de données collaborative documentant les controverses, leurs acteurs et leurs impacts sur la société."
} = Astro.props
---

<!doctype html>
<html lang="fr" class="h-full bg-gray-50">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
  </head>
  <body class="h-full">
    <!-- Navigation -->
    <header class="bg-white shadow-sm">
      <nav class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8" aria-label="Navigation principale">
        <div class="flex h-16 justify-between items-center">
          <!-- Logo -->
          <div class="flex">
            <a href="/" class="flex items-center">
              <span class="text-2xl font-bold text-orange-600">Namecheck</span>
            </a>
          </div>

          <!-- Navigation Links -->
          <div class="hidden md:flex md:space-x-8">
            <a
              href="/controversies"
              class="inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-900 hover:text-orange-600"
            >
              Controverses
            </a>
            <a
              href="/entities"
              class="inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-900 hover:text-orange-600"
            >
              Entités
            </a>
            <a
              href="/categories"
              class="inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-900 hover:text-orange-600"
            >
              Catégories
            </a>
          </div>

          <!-- Mobile menu button -->
          <div class="flex items-center md:hidden">
            <button
              type="button"
              class="mobile-menu-button inline-flex items-center justify-center rounded-md p-2 text-gray-400 hover:bg-gray-100 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-orange-500"
              aria-controls="mobile-menu"
              aria-expanded="false"
            >
              <span class="sr-only">Ouvrir le menu principal</span>
              <svg
                class="block h-6 w-6"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 6h16M4 12h16M4 18h16"
                />
              </svg>
            </button>
          </div>
        </div>

        <!-- Mobile menu -->
        <div class="md:hidden hidden" id="mobile-menu">
          <div class="space-y-1 pb-3 pt-2">
            <a
              href="/controversies"
              class="block py-2 pl-3 pr-4 text-base font-medium text-gray-900 hover:bg-gray-50 hover:text-orange-600"
            >
              Controverses
            </a>
            <a
              href="/entities"
              class="block py-2 pl-3 pr-4 text-base font-medium text-gray-900 hover:bg-gray-50 hover:text-orange-600"
            >
              Entités
            </a>
            <a
              href="/categories"
              class="block py-2 pl-3 pr-4 text-base font-medium text-gray-900 hover:bg-gray-50 hover:text-orange-600"
            >
              Catégories
            </a>
          </div>
        </div>
      </nav>
    </header>

    <!-- Main content -->
    <slot />

    <!-- Footer -->
    <footer class="bg-white mt-auto">
      <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
        <div class="xl:grid xl:grid-cols-3 xl:gap-8">
          <!-- Brand -->
          <div class="space-y-8">
            <span class="text-2xl font-bold text-orange-600">Namecheck</span>
            <p class="text-gray-500 text-sm">
              Une base de données collaborative documentant les controverses, leurs acteurs et leurs impacts sur la société.
            </p>
            <div class="flex space-x-6">
              <a href="https://twitter.com" class="text-gray-400 hover:text-gray-500">
                <span class="sr-only">Twitter</span>
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
                </svg>
              </a>
              <a href="https://github.com" class="text-gray-400 hover:text-gray-500">
                <span class="sr-only">GitHub</span>
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                </svg>
              </a>
            </div>
          </div>

          <!-- Links -->
          <div class="mt-12 grid grid-cols-2 gap-8 xl:col-span-2 xl:mt-0">
            <div class="md:grid md:grid-cols-2 md:gap-8">
              <div>
                <h3 class="text-sm font-semibold text-gray-900">Explorer</h3>
                <ul role="list" class="mt-4 space-y-4">
                  <li>
                    <a href="/controversies" class="text-sm text-gray-500 hover:text-orange-600">
                      Controverses
                    </a>
                  </li>
                  <li>
                    <a href="/entities" class="text-sm text-gray-500 hover:text-orange-600">
                      Entités
                    </a>
                  </li>
                  <li>
                    <a href="/categories" class="text-sm text-gray-500 hover:text-orange-600">
                      Catégories
                    </a>
                  </li>
                </ul>
              </div>
              <div class="mt-12 md:mt-0">
                <h3 class="text-sm font-semibold text-gray-900">Légal</h3>
                <ul role="list" class="mt-4 space-y-4">
                  <li>
                    <a href="/privacy" class="text-sm text-gray-500 hover:text-orange-600">
                      Confidentialité
                    </a>
                  </li>
                  <li>
                    <a href="/terms" class="text-sm text-gray-500 hover:text-orange-600">
                      Conditions d'utilisation
                    </a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <div class="mt-12 border-t border-gray-200 pt-8">
          <p class="text-sm text-gray-400 xl:text-center">
            &copy; {new Date().getFullYear()} Namecheck. Tous droits réservés.
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.querySelector('.mobile-menu-button')
  const mobileMenu = document.querySelector('#mobile-menu')

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden')
  })
</script>

<style is:global>
  /* Add any global styles here */
  html {
    scroll-behavior: smooth;
  }
</style>
